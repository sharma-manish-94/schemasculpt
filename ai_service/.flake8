# Flake8 configuration for SchemaSculpt AI Service
# Flake8 doesn't read from pyproject.toml natively, so we use this file

[flake8]
max-line-length = 88
extend-ignore = E203, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    data

per-file-ignores =
    __init__.py:F401
