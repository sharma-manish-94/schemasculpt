    <!-- ============================================ -->
    <!-- Repository Mirrors                           -->
    <!-- ============================================ -->

    <mirrors>
        <!--
            Maven Central Mirror - Use a reliable mirror close to your location
            Uncomment one of these options or add your preferred mirror
        -->

        <!-- Option 1: Direct Maven Central (default) -->
        <!-- No mirror needed, uses central directly -->

        <!-- Option 2: Maven Central via HTTPS (recommended) -->
        <!--
        <mirror>
            <id>central-https</id>
            <name>Central Repository HTTPS</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
        -->

        <!-- Option 3: Spring's Maven Central Mirror (highly reliable) -->
        <!--
        <mirror>
            <id>spring-central-mirror</id>
            <name>Spring Central Mirror</name>
            <url>https://repo.spring.io/release</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
        -->

        <!-- Option 4: Sonatype Central Mirror -->
        <!--
        <mirror>
            <id>sonatype-central</id>
            <name>Sonatype Central</name>
            <url>https://oss.sonatype.org/content/repositories/releases</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
        -->
    </mirrors>

    <!-- ============================================ -->
    <!-- Active Profiles                              -->
    <!-- ============================================ -->

    <activeProfiles>
        <activeProfile>schemasculpt-repos</activeProfile>
    </activeProfiles>

    <!-- ============================================ -->
    <!-- Repository Profiles                          -->
    <!-- ============================================ -->

    <profiles>
        <profile>
            <id>schemasculpt-repos</id>

            <!-- ============================================ -->
            <!-- Dependency Repositories                      -->
            <!-- ============================================ -->

            <repositories>
                <!-- Maven Central -->
                <repository>
                    <id>central</id>
                    <name>Maven Central Repository</name>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>

                <!-- Spring Releases -->
                <repository>
                    <id>spring-releases</id>
                    <name>Spring Releases</name>
                    <url>https://repo.spring.io/release</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>

                <!-- Spring Milestones -->
                <repository>
                    <id>spring-milestones</id>
                    <name>Spring Milestones</name>
                    <url>https://repo.spring.io/milestone</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>

                <!-- Spring Snapshots (Optional - enable if needed) -->
                <repository>
                    <id>spring-snapshots</id>
                    <name>Spring Snapshots</name>
                    <url>https://repo.spring.io/snapshot</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                        <!-- Change to true if you need snapshot dependencies -->
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>

                <!-- MuleSoft Releases Repository -->
                <repository>
                    <id>mulesoft-releases</id>
                    <name>MuleSoft Releases Repository</name>
                    <url>https://repository-master.mulesoft.org/nexus/content/repositories/releases</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>

                <!-- Sonatype Releases (for OSSRH artifacts) -->
                <repository>
                    <id>sonatype-releases</id>
                    <name>Sonatype Releases</name>
                    <url>https://oss.sonatype.org/content/repositories/releases</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>

                <!-- Sonatype Snapshots (Optional) -->
                <repository>
                    <id>sonatype-snapshots</id>
                    <name>Sonatype Snapshots</name>
                    <url>https://oss.sonatype.org/content/repositories/snapshots</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                        <!-- Change to true if you need snapshot dependencies -->
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>


                <!-- Atlassian Public Repository (for some utility libs) -->
                <repository>
                    <id>atlassian-public</id>
                    <name>Atlassian Public Repository</name>
                    <url>https://packages.atlassian.com/maven-external</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>

                <!-- JBoss Public Repository -->
                <repository>
                    <id>jboss-public</id>
                    <name>JBoss Public Repository</name>
                    <url>https://repository.jboss.org/nexus/content/groups/public</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>

            <!-- ============================================ -->
            <!-- Plugin Repositories                          -->
            <!-- ============================================ -->

            <pluginRepositories>
                <!-- Maven Central Plugins - Primary source for all standard plugins -->
                <pluginRepository>
                    <id>central</id>
                    <name>Maven Central Plugin Repository</name>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>

            <!-- ============================================ -->
            <!-- Build Properties                             -->
            <!-- ============================================ -->

            <properties>
                <!-- Encoding -->
                <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
                <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

                <!-- Java Version -->
                <maven.compiler.source>21</maven.compiler.source>
                <maven.compiler.target>21</maven.compiler.target>
                <maven.compiler.release>21</maven.compiler.release>

                <!-- Download behavior -->
                <maven.artifact.threads>5</maven.artifact.threads>
                <maven.resolver.transport>auto</maven.resolver.transport>

                <!-- Skip certain checks during development (can be overridden) -->
                <!-- <checkstyle.skip>false</checkstyle.skip> -->
                <!-- <spotbugs.skip>false</spotbugs.skip> -->
                <!-- <pmd.skip>false</pmd.skip> -->
                <!-- <dependency-check.skip>false</dependency-check.skip> -->
            </properties>
        </profile>

        <!-- ============================================ -->
        <!-- Additional Profiles for Special Cases        -->
        <!-- ============================================ -->

        <!-- Fast Build Profile - Skip quality checks -->
        <profile>
            <id>fast</id>
            <properties>
                <checkstyle.skip>true</checkstyle.skip>
                <spotbugs.skip>true</spotbugs.skip>
                <pmd.skip>true</pmd.skip>
                <dependency-check.skip>true</dependency-check.skip>
                <jacoco.skip>true</jacoco.skip>
                <maven.test.skip>false</maven.test.skip>
            </properties>
        </profile>

        <!-- CI Profile - All checks enabled -->
        <profile>
            <id>ci</id>
            <properties>
                <checkstyle.skip>false</checkstyle.skip>
                <spotbugs.skip>false</spotbugs.skip>
                <pmd.skip>false</pmd.skip>
                <dependency-check.skip>false</dependency-check.skip>
                <jacoco.skip>false</jacoco.skip>
                <maven.test.skip>false</maven.test.skip>
            </properties>
        </profile>

        <!-- Security Scan Profile -->
        <profile>
            <id>security</id>
            <properties>
                <checkstyle.skip>true</checkstyle.skip>
                <spotbugs.skip>false</spotbugs.skip>
                <pmd.skip>true</pmd.skip>
                <dependency-check.skip>false</dependency-check.skip>
                <jacoco.skip>true</jacoco.skip>
            </properties>
        </profile>
    </profiles>
</settings>
