{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "schedule": ["before 5am on Monday"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^org.springframework"],
      "groupName": "Spring Boot Dependencies"
    },
    {
      "matchPackagePatterns": ["^react", "^react-dom"],
      "groupName": "React Core"
    },
    {
      "matchPackagePatterns": ["^fastapi", "^uvicorn", "^pydantic"],
      "groupName": "FastAPI Core"
    }
  ],
  "osvVulnerabilityAlerts": true,
  "labels": ["dependencies"],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2
}
