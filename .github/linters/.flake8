# Flake8 configuration for GitHub Super Linter
# This file is used by the Super Linter in CI/CD

[flake8]
max-line-length = 120
extend-ignore = E203, W503, F541, E501, W605, F841, E722
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    data,
    migrations

per-file-ignores =
    __init__.py:F401
    manage_rag.py:E402
    test_providers.py:E402
    scripts/*.py:E402
